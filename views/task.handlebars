<div class="container">
  <div class="card">
    <h5 class="card-header bg-primary text-white">Add a New Task</h5>
    <div class="card-body">
      <form>
        <div class="form-group">
          <label for="taskInput">Task</label>
          <input type="text" class="form-control" id="taskInput" placeholder="Insert Task">
        </div>
        
<div class="radioContainer">
        <div class="form-check">
  <input class="form-check-input" type="radio" name="urgency" id="asap" value="ASAP">
  <label class="form-check-label" for="asap">
    ASAP
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="urgency" id="thisWeek" value="This Week">
  <label class="form-check-label" for="thisWeek">
    This Week
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="urgency" id="forLater" value="For Later">
  <label class="form-check-label" for="forLater">
    For Later
  </label>
</div>
</div>
      </form>
      <button type="submit" class="btn btn-primary" id="addTask">Add Task</button>
      <button type="submit" class="btn btn-primary homeButton">Home</button>
    </div>
  </div>
</div>

